<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="application.TossController">
   <children>
      <Pane layoutX="-7.0" prefHeight="364.0" prefWidth="376.0">
         <children>
            <Button fx:id="coinButton" layoutX="162.0" layoutY="33.0" mnemonicParsing="false" onAction="#clickCoin" text="Toss Coin" />
            <Label fx:id="resultLabel" layoutX="90.0" layoutY="150.0" text="COIN RESULT" />
            <ImageView fx:id="imageHead" fitHeight="150.0" fitWidth="200.0" layoutX="162.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@heads.jpg" />
               </image>
            </ImageView>
            <RadioButton fx:id="headsRadio" layoutX="185.0" layoutY="87.0" mnemonicParsing="false" text="Heads" />
            <RadioButton fx:id="tailsRadio" layoutX="185.0" layoutY="115.0" mnemonicParsing="false" text="Tails" />
            <Label fx:id="humanRight" layoutX="28.0" layoutY="37.0" text="HUMAN GUESS" />
            <Label fx:id="robotRight" layoutX="28.0" layoutY="70.0" text="ROBOT RIGHT" />
            <ImageView fx:id="imageTail" fitHeight="150.0" fitWidth="200.0" layoutX="162.0" layoutY="214.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@tails.jpg" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</AnchorPane>
